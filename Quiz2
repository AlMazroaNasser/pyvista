import numpy as np
import pyvista as pv

nx=500
ny=500

x=np.linspace(-5,5, nx)
y=np.linspace(-5,5, ny)

X, Y=np.meshgrid(x,y)

#I will make Z= X*Y**3-Y*X**3           #f(x,y)=X*Y**3-Y*X**3  
Z= X*(Y**3)-Y*(X**3)
surface_grid = pv.StructureGrid(X,Y,Z)
pv.set_plot_theme('document')
surface_grid.plot(show_bounds = 1, show_axes = 1, show_edges= 1, window_size=[800,800],color=[24/255,0,91/255.0,150/255.0])
